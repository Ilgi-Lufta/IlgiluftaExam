<h1 class="text-left mt-5 mb-5">@ViewBag.myHobby.Name</h1>
<div class="row">

    <div class="col-sm-8">
        <div class="row">
            <div class="col-sm-4">
                <h1>Discription :</h1>
            </div>
            <div class="col-sm-8">
               
                <p>
                    @ViewBag.myHobby.Discription
                </p>
               
            </div>
        </div>
    </div> 
        

</div>   
<div class="row mt-5 mb-5">
    <div class=" offset-sm-5 col-sm-2">
        <a class="btn btn-primary" asp-action="EditHobby" asp-controller="Home" asp-route-id="@ViewBag.myHobby.HobbyId" >Edit Hobby</a>
    </div>
</div> 

<div class="row">
   <div class="col sm-6">
    <h3>
        Hiking Enthusiast
    </h3>

            <table class="table table-striped table-bordered  ">
            
                <thead>
                    <tr>
                        <th   scope="col ">Name</th>
                        <th   scope="col">Proficiency</th>
                    
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.myHobby.MyEnthusiasts)
                    {
                    <tr>
                        <td scope="row"> @item.Person.FirstName
                            
                              </td>
                              <td scope="row">
                                @item.Proficiency
                              </td>

                    </tr>
                         }
            
           
        </tbody>
            
        
    </table>
            
            
   </div>
    <div class="col sm-6">

<form asp-action="BecomeEnthusiast" asp-route-id="@ViewBag.myHobby.HobbyId"  class="d-flex"  method="post">
            <div class="form-group d-flex flex-column">
                <label  class="mb-2"> Become an Enthusiast </label>
                <select  name= "proeficiency">
                    <option value="Novice">Novice</option>
                    <option value="Expert" >Expert</option>
                    <option value="Intermediate">Intermediate</option>
                  
                </select>
                
                <button type="submit" class="btn btn-primary mt-3">Add to Hobbies</button>


                </form>
    
   </div>

   