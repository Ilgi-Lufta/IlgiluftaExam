@model Hobby

        <h1 class="text-center">Create a Hobby</h1>
    
    

<div class="row">
  <form  asp-controller="Home" asp-action="CreateHobby"  method="post">
    <div class="col-sm-6">
      

              <div class="form-group">
                  <span asp-validation-for="Name"></span>
                  <label asp-for="Name"></label>
                  <input asp-for="Name" class="form-control" >
                
                </div>
                <div class="form-group">
                  <span asp-validation-for="Discription"></span>
                  <label asp-for="Discription"></label>
                  <input type="textarea" asp-for="Discription" class="form-control" >
                
                </div>

 

    </div>
        
    <div class="col-sm-6">
      <button type="submit" class="btn btn-primary mt-3">Create</button>
      </div>
</form>
</div>




    